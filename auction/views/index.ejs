<!DOCTYPE html>
<head>
    <title>Chess Federation</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

    <script src="/javascripts/angular.min.js"></script>
    <script src="/javascripts/angular-ui-router.js"></script>

    <script src="/javascripts/app/sd.authentication/sd.authentication.js"></script>
    <script src="/javascripts/app/sd.authentication/sd.authentication.routing.js"></script>
    <script src="/javascripts/app/sd.authentication/services/sd.auth.svc.js"></script>
    <script src="/javascripts/app/sd.authentication/controllers/sd.authentication.ctrl.js"></script>

    <script src="/javascripts/app/sd.main/app.js"></script>
    <script src="/javascripts/app/sd.main/app.routing.js"></script>
    <script src="/javascripts/app/sd.main/services/sd.posts.svc.js"></script>
    <script src="/javascripts/app/sd.main/controllers/sd.main.ctrl.js"></script>
    <script src="/javascripts/app/sd.main/controllers/sd.nav.ctrl.js"></script>
    <script src="/javascripts/app/sd.main/controllers/sd.post.ctrl.js"></script>
    <script src="/javascripts/app/sd.main/directives/sd.current-auction.drv.js"></script>
