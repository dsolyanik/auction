<script type="text/ng-template" id="/suggestedposts.html">
    <div sd-current-auction>ііі</div>
    <sd-current-auction></sd-current-auction>

    <input type="text" class="form-control" ng-model="myNews">
    <button class="btn btn-warning" ng-click="sendNews()">send</button>
    {{news}}
    <!--<span ng-bind="news"> </span>-->
    <table>
        <tr>
            <th>Title Post</th>
            <th>Author</th>
            <th>Created</th>
            <th>Status</th>
        </tr>
        <tr ng-repeat="post in posts | orderBy : '-createdAt'">
            <td>{{post.title}}</td>
            <td>{{post.author}}</td>
            <td>{{post.createdAt}}</td>
            <td>{{post.status}}</td>
            <td><a class="btn btn-success" href="/#/" ng-click="approvePost(post.id)">approve</a></td>
            <td><a class="btn btn-primary" href="/#/" ng-click="changePost(post.id)">change</a></td>
            <td>
                <button class="btn btn-warning" ng-click="removePosts(post._id)">delete</button>
            </td>
        </tr>
    </table>

</script>

<script type="text/ng-template" id="/register.html">
    <div class="page-header">
        <h1>ChessFederation</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
        <span>{{error.message}}</span>
    </div>

    <form ng-submit="register()" style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" ng-model="user.username"> </input>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="user.password"> </input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</script>

<script type="text/ng-template" id="/login.html">
    <div class="page-header">
        <h1>ChessFederation</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
    </div>

    <form ng-submit="login()" style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" ng-model="user.username"> </input>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" ng-model="user.password"> </input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</script>
</body>
</html>